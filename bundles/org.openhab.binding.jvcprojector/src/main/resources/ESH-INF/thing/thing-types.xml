<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="jvcprojector" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- JvcProjector Channel Types -->
    <thing-type id="projector">
	    <label>JVC Projector</label>
	    <description>A thing that represents a JVC Projector</description>
	    
	    <channel-groups>
	       <channel-group id="status" typeId="status"/>
           <channel-group id="info" typeId="info"/>
           <channel-group id="source-info" typeId="source-info"/>
           <channel-group id="remote" typeId="remote"/>
	     </channel-groups>
	    
	    <config-description>
            <parameter name="ipAddress" type="text" required="true">
                <label>IP Address</label>
                <description>IP Address of projector</description>
             </parameter>
            <parameter name="port" type="integer" required="false">
                <label>Port</label>
                <description>The default port is 20554. Override as necessary</description>
                <default>20554</default>
             </parameter>
        </config-description>
    </thing-type>

    <channel-group-type id="status">
        <label>Status</label>
        <description>These channels accept commands and also trigger when the device changes state</description>
        <channels>
            <channel id="power-switch" typeId="channel-type-switch">
                <label>Power On/Off</label>
                <description>This channel provides current state and also triggers when the state changes on refresh</description>
            </channel>
            <channel id="power-state" typeId="channel-type-string-readonly">
                <label>Power On/Off</label>
                <description>This channel provides current state and also triggers when the state changes on refresh</description>
            </channel>
            <channel id="input" typeId="channel-type-input">
            </channel>
            <channel id="model" typeId="channel-type-string-readonly">
                <label>Model</label>
            </channel>
            <channel id="source" typeId="channel-type-string-readonly">
                <label>Source</label>
            </channel>
        </channels>
    </channel-group-type>
    
    <channel-group-type id="info">
    <label>Information</label>
    <description>These channels are read only channels that provide information about the projector.</description>
    <channels>
        <channel id="input" typeId="channel-type-information">
            <label>Input</label></channel>
        <channel id="source-format" typeId="channel-type-information">
            <label>Source Format</label>
        </channel>
        <channel id="lamp-time" typeId="channel-type-information">
            <label>Lamp Time</label>
        </channel>
        <channel id="software-version" typeId="channel-type-information">        
            <label>Software Version</label>
        </channel>
    </channels>
    </channel-group-type>    

    <channel-group-type id="source-info">
    <label>Source Information</label>
    <description>These channels are read only channels that provide information about the content that is playing on the projector.</description>
    <channels>
        <channel id="horizontal-resolution" typeId="channel-type-information">
            <label>Horizontal Resolution</label>
        </channel>
        <channel id="vertical-resolution" typeId="channel-type-information">
            <label>Vertical Resolution</label>
        </channel>
        <channel id="horizontal-frequency" typeId="channel-type-information">
            <label>Horizontal Frequency</label>
        </channel>
        <channel id="vertical-frequency" typeId="channel-type-information">
            <label>Vertical Frequency</label>
        </channel>
        <channel id="deep-color" typeId="channel-type-information">
            <label>Deep Color</label>
        </channel>
        <channel id="color-space" typeId="channel-type-information">
            <label>Color Space</label>
        </channel>
    </channels>
    </channel-group-type>    
            
    <channel-group-type id="remote">
        <label>Remote Buttons</label>
        <description>These channels accept commands and also trigger when the device changes state. They corresponding to pressing the same button on the remote.</description>
        <channels>
          <channel id="button" typeId="channel-type-remote-button">
          <label>Remote button</label>
          <description>Each of these commands represents pressing the equivalent button on the remote.</description>
          </channel>
        </channels>
    </channel-group-type>
        
    <channel-type id="channel-type-switch" advanced="false">
        <item-type>Switch</item-type>
        <label>Power</label>
        <autoUpdatePolicy>veto</autoUpdatePolicy>
    </channel-type>

    <channel-type id="channel-type-input" advanced="false">
        <item-type>String</item-type>
        <label>Input</label>
        <state>
            <options>
                <option value="HDMI1">HDMI1</option>
                <option value="HDMI2">HDMI2</option>
            </options>        
        </state>
        <autoUpdatePolicy>veto</autoUpdatePolicy>
    </channel-type>

    <channel-type id="channel-type-string" advanced="false">
        <item-type>String</item-type>
        <label>String</label>
        <autoUpdatePolicy>veto</autoUpdatePolicy>
    </channel-type>

    <channel-type id="channel-type-string-readonly" advanced="false">
        <item-type>String</item-type>
        <label>Readonly String</label>
        <state readOnly="true"/>
        <autoUpdatePolicy>veto</autoUpdatePolicy>
    </channel-type>

    <channel-type id="channel-type-information" advanced="false">
        <item-type>String</item-type>
        <label>Readonly String</label>
        <state readOnly="true"/>
        <autoUpdatePolicy>veto</autoUpdatePolicy>
    </channel-type>

	<channel-type id="channel-type-remote-button" advanced="false">
		<item-type>String</item-type>
		<label>Remote Button</label>
        <description>A string command sent to this channel is equivalent to pressing the equivalent remote control button</description>
          <command>
          <options>
            <option value="standby">STAND BY</option>
            <option value="on">ON</option>
            <option value="input">INPUT</option>
            <option value="info">INFO</option>
            <option value="environment-setting">ENV. SETTING</option>
            <option value="3d-setting">3D SETTING</option>
            <option value="clear-motion-drive">C.M.D</option>
            <option value="lens-control">LENS CONTROL</option>
            <option value="lens-memory">LENS MEMORY</option>
            <option value="lens-aperture">LENS AP.</option>
            <option value="mpc">MPC</option>
            <option value="picture-analyser">P.ANALYZER</option>
            <option value="before-after">BEFORE/AFTER</option>
            <option value="hide">HIDE</option>
            <option value="up">▲</option>
            <option value="down">▼</option>
            <option value="right">▶</option>
            <option value="left">◀</option>
            <option value="ok">OK</option>
            <option value="menu">MENU</option>
            <option value="back">BACK</option>
            <option value="film">FILM</option>
            <option value="cinema">CINEMA</option>
            <option value="anime">ANIME.</option>
            <option value="natural">NATURAL</option>
            <option value="photo">PHOTO</option>
            <option value="stage">STAGE</option>
            <option value="thx">THX</option>
            <option value="user">USER</option>
            <option value="3d-format">3D FORMAT</option>
            <option value="advanced-menu">ADVANCED MENU</option>
            <option value="gamma">GAMMA</option>
            <option value="color-temperature">COLOR TEMP.</option>
            <option value="color-profile">COLOR P.FILE</option>
            <option value="picture-adjust">PIC. ADJ.</option>
          </options>
          </command>
	</channel-type>

</thing:thing-descriptions>
